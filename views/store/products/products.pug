extends ../../layout
block content
	.container
		.page-container
			p #{title}
			table.bordered.highlight.centered
				thead
					tr
						th(style="border-top:1px solid lightgrey; border-right:1px solid lightgrey; border-left:1px solid lightgrey;")
							i.material-icons remove_red_eye
						th Code
						th Image
						th Name
						th Stock
						th Category
						th Price
						th Origin
						th(rowspan="2")
				tbody
					each product in products
						tr
							-if(product.data().publish == "on")
								td(style="border-right:1px solid lightgrey; border-left:1px solid lightgrey; color:green;")
									i.material-icons check
							-else
								td(style="border-right:1px solid lightgrey; border-left:1px solid lightgrey; color:red;")
									i.material-icons clear
							td(style="border-right:1px solid lightgrey;")= product.data().code
							td(style="border-right:1px solid lightgrey;")
								//- cloudinary.image("zsxsluxe9hqbwipvwnwb.jpg")
								img(src=product.data().imageUrl style="width:50px;")
							td(style="border-right:1px solid lightgrey;")= product.data().name
							td(style="border-right:1px solid lightgrey;")= product.data().stock
							td(style="border-right:1px solid lightgrey;")= product.data().category
							td(style="border-right:1px solid lightgrey;")= product.data().price
							td(style="border-right:1px solid lightgrey;")= product.data().description.origin
							td
								a(onclick="spinner()" href=`/products/show/${product.id}`) show
							td(style="border-right:1px solid lightgrey;") 
								i.material-icons(onclick="deleteProduct(this.id)" id=product.id) clear
								p#photoId(style="display: none;")= product.data().photo_id
		.pagination-container
			ul.pagination
				li.disabled
					a(href='#!')
						i.material-icons chevron_left
				li.active
					a(href='#!') 1
				li.waves-effect
					a(href='#!') 2
				li.waves-effect
					a(href='#!') 3
				li.waves-effect
					a(href='#!') 4
				li.waves-effect
					a(href='#!') 5
				li.waves-effect
					a(href='#!')
						i.material-icons chevron_right
