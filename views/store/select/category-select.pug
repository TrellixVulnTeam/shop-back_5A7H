extends ../../layout
block content
	.container
		.form-container
			h3 #{title}
			form.col.s12
				.row
					.input-field.col.s4#allSelection
						select#dept()
							option(value="" selected disabled) Select Category
							each cat in data			
								option(value=cat.id) #{cat.data().name}
						label Category
				.row(onclick="gotoNewProduct()")
					a.waves-effect.waves-light.btn#but(onclick="spinner()") Add Product